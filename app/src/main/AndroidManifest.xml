<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.brian.learnmaoriapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_round_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NumbersActivity"
            android:label="Learn Numbers"
            android:theme="@style/NumberActivityTheme"
            >
        </activity>
        <activity
            android:name=".FamilyMembersActivity"
            android:label="Learn Family Names"
            android:theme="@style/FamilyActivityTheme"
            >
        </activity>
        <activity
            android:name=".ColoursActivity"
            android:label="Learn Colours"
            android:theme="@style/ColoursActivityTheme">
        </activity>
    </application>

</manifest>