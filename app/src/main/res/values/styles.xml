<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#009688</item>
        <item name="colorPrimaryDark">#009688</item>
        <item name="colorAccent">#76FF03</item>
    </style>
    <style name="CategoryCardStyle" parent="CardView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="CategoryTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textColor">#F5f5f5</item>
    </style>
    <style name="NumberActivityTheme" parent="AppTheme">
        <item name="colorPrimary">#F44336</item>
        <item name="colorPrimaryDark">#F44336</item>
    </style>
    <style name="FamilyActivityTheme" parent="AppTheme">
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#2196F3</item>
    </style>
    <style name="ColoursActivityTheme" parent="AppTheme">
        <item name="colorPrimary">#FF9800</item>
        <item name="colorPrimaryDark">#FF9800</item>
    </style>
    <style name="PlayButtonStyle">

    </style>

</resources>
